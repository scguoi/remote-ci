[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    .mypy_cache,
    .pytest_cache,
    node_modules,
    .env,
    .venv,
    env,
    venv,
    ENV,
    VENV
ignore = 
    E501,  # line too long (let black handle this)
    W503,  # line break before binary operator (black style)
    E203,  # whitespace before ':' (black style)
per-file-ignores = 
    __init__.py:F401